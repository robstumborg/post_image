{
  "manifest_version": 2,
  "name": "POST Image",
  "version": "0.6",
  "icons": {
    "200": "icon.png"
  },
  "description": "This extension allows you to right click an image and upload it to an image sharing website.",
  "permissions" : [
    "contextMenus",
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": ["upload.js"]
  },
  "content_scripts" : [
    {
      "matches" : ["http://*/*", "https://*/*"],
      "css" : [],
      "js" : ["upload.js"]
    }
  ],
  "options_ui": {
    "page": "settings.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "rj1@riseup.net"
    }
  }
}
